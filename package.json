{
  "name": "zenhub-app",
  "productName": "Zeta",
  "version": "0.0.1",
  "description": "An Electron app for ZenHub users",
  "license": "MIT",
  "repository": "horimislime/zenhub-app",
  "author": {
    "name": "horimislime",
    "email": "horimislime@gmail.com",
    "url": "horimisli.me/about"
  },
  "scripts": {
    "test": "xo",
    "start": "electron .",
    "postinstall": "electron-builder install-app-deps",
    "pack": "electron-builder --dir",
    "dist": "electron-builder -mwl"
  },
  "files": [
    "index.js",
    "index.html",
    "index.css"
  ],
  "keywords": [
    "electron-app",
    "electron"
  ],
  "dependencies": {
    "electron-debug": "^1.0.0",
    "electron-config": "^1.0.0"
  },
  "devDependencies": {
    "devtron": "^1.4.0",
    "electron": "^1.7.5",
    "electron-builder": "^19.22.1",
    "electron-builder-squirrel-windows": "^19.23.0",
    "electron-connect": "^0.6.2",
    "xo": "^0.16.0"
  },
  "xo": {
    "esnext": true,
    "envs": [
      "node",
      "browser"
    ]
  },
  "electronVersion": "1.7.5",
  "build": {
    "appId": "me.horimisli.zeta",
    "asar": true,
    "mac": {
      "category": "public.app-category.developer-tools",
      "icon": "static/app.icns",
      "target": [
        "zip"
      ]
    },
    "linux": {
      "target": [
        {
          "target": "deb",
          "arch": [
            "ia32",
            "x64"
          ]
        },
        {
          "target": "AppImage",
          "arch": [
            "ia32",
            "x64"
          ]
        }
      ]
    },
    "win": {
      "icon": "static/app.ico",
      "target": [
        "zip"
      ]
    }
  }
}
